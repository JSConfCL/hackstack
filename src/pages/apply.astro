---
import Layout from "../layouts/Layout.astro";
---

<script async src="https://tally.so/widgets/embed.js"></script>

<style>
  html {
    margin: 0;
    height: 100%;
    overflow: hidden;
  }
  iframe {
    display: block; /* iframes are inline by default */
    background: transparent;
    border: none; /* Reset default border */
    height: 100vh; /* Viewport-relative units */
    width: 100vw;
    margin: 0;
  }
</style>
<Layout title="Welcome to Astro.">
  <main
    id="main"
    class="m-auto max-w-xl text-white text-lg leading-loose flex flex-col gap-10 transition-all ease-in-out duration-300 pt-20 pb-40 p-4"
  >
    <section
      class="translate-y-5 transition-all ease-in duration-700 opacity-0"
    >
      <div>
        <h1
          class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold text-center font-sans"
        >
          Aplicación
        </h1>
      </div>
    </section>
    <section
      class="translate-y-5 transition-all ease-in delay-700 duration-700 opacity-0"
    >
      <div class="flex">
        <iframe
          data-tally-src="https://tally.so/r/nP9YM0?transparentBackground=1"
          title="HackStack — Inscripción"></iframe>
      </div>
    </section>
  </main>
</Layout>
