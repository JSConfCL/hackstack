---
import Layout from "../layouts/Layout.astro";
import AnimatedSection from "../components/AnimatedSection.astro";
import Tldr from "../components/tldr.astro";
import FancyAnchor from "../components/FancyAnchor.astro";
---

<Layout title="Welcome to HackStack">
  <main
    id="main"
    class="w-full transition-all m-auto selection:bg-purple-600 selection:text-white text-white leading-loose flex flex-col gap-16 pt-[30vh] pb-[30vh] px-4 overflow-x-hidden"
  >
    <div
      class="m-auto max-w-xl w-full flex flex-col"
      transition:name="hero"
      transition:animate="initial"
    >
      <AnimatedSection>
        <h1 class="text-6xl font-bold font-callout">Hey.</h1>
      </AnimatedSection>
    </div>
    <div class="m-auto max-w-xl w-full flex flex-col">
      <AnimatedSection>
        <Tldr />
      </AnimatedSection>
    </div>
    <div class="m-auto max-w-xl w-full flex flex-col">
      <AnimatedSection>
        <FancyAnchor link="/text" content="Conoce mÃ¡s" />
      </AnimatedSection>
    </div>
  </main>
</Layout>
