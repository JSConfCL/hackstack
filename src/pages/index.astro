---
import Layout from "../layouts/Layout.astro";
import AnimatedSection from "../components/AnimatedSection.astro";
import Tldr from "../components/tldr.astro";
import FancyAnchor from "../components/FancyAnchor.astro";
import FancyIcon from "../components/FancyIcon.astro";
import Iniciativas from "../components/Iniciativas.astro";
---

<Layout title="Welcome to HackStack">
  <main
    id="main"
    class="w-full transition-all m-auto items-center selection:bg-purple-600 selection:text-white text-white leading-loose flex flex-col pt-[20vh] pb-[30vh] px-4 gap-20 overflow-x-hidden"
  >
    <div class="flex flex-col md:flex-row gap-16 px-8">
      <div class="flex flex-col gap-12">
        <div class="m-auto max-w-xl w-full flex flex-col" transition:name="1">
          <AnimatedSection>
            <h1
              class="text-5xl md:text-6xl lg:text-7xl font-bold font-callout drop-shadow-fancy-text"
            >
              HACKSTACK.
            </h1>
          </AnimatedSection>
        </div>
        <div class="m-auto max-w-xl w-full flex flex-col">
          <AnimatedSection>
            <Tldr />
          </AnimatedSection>
        </div>
      </div>
      <div class="justify-center items-center hidden md:flex">
        <AnimatedSection>
          <FancyIcon />
        </AnimatedSection>
      </div>
    </div>
    <Iniciativas />
    <div class="w-full flex flex-col items-center gap-16">
      <AnimatedSection>
        <FancyAnchor link="/text" content="Conoce mÃ¡s" />
      </AnimatedSection>
      <div class="justify-center items-center flex md:hidden">
        <AnimatedSection>
          <FancyIcon />
        </AnimatedSection>
      </div>
    </div>
  </main>
</Layout>
