---
import Layout from "../layouts/Layout.astro";
import TextBlock from "../components/IntroText.astro";
import AnimatedSection from "../components/AnimatedSection.astro";
import CTA from "../components/CTA.astro";
import FancyIcon from "../components/FancyIcon.astro";
---

<Layout title="Hackstack">
  <main
    id="main"
    class="w-full transition-all m-auto text-white text-lg leading-loose flex flex-col gap-28 md:gap-48 pt-28 md:pt-36 xl:pt-44 pb-[10vh] px-6 md:px-4 overflow-x-hidden"
  >
    <div
      class="m-auto max-w-xl w-full flex flex-col selection:bg-purple-600 selection:text-white"
      transition:name="hero"
      transition:animate="initial"
    >
      <AnimatedSection>
        <h1
          class="text-7xl md:text-9xl font-bold text-center font-callout drop-shadow-fancy-text"
        >
          Hey.
        </h1>
      </AnimatedSection>
    </div>
    <div class="flex flex-col gap-24 m-auto max-w-2xl w-full">
      <TextBlock />
      <AnimatedSection>
        <h1
          class="-rotate-3 text-4xl md:text-5xl lg:text-6xl font-bold text-right font-callout"
        >
          HACKSTACK
        </h1>
      </AnimatedSection>
      <CTA />
      <AnimatedSection>
        <div class="justify-center items-center flex opacity-10">
          <FancyIcon />
        </div>
      </AnimatedSection>
    </div>
  </main>
</Layout>
